
@model IEnumerable<OfficeMvcApi.Management>
<h2>Managements </h2>
<p>

    @Html.ActionLink("Create New Management List", "Create",new { id = 1 },new { @class = "btn btn-primary btn-large" })


</p>

@{
    int c = 0;
}
@{
    int a = 0;
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SponsoredAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SellingAmount)
        </th>
      
        <th>
            @Html.DisplayNameFor(model => model.Additional.TotalAdditional)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bill.TotalBills)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clark.TotalSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.TotalSalary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bill.Month)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SponsoredAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SellingAmount)
        </td>

        
     
        <td>
            @Html.DisplayFor(modelItem => item.Additional.TotalAdditional)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bill.TotalBills)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clark.TotalSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.TotalSalary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bill.Month)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-large" }) 
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-large" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary btn-large" })
        </td>
    </tr>
    
    c = (item.SellingAmount - item.SponsoredAmount - Convert.ToInt32(item.Employee.TotalSalary) - Convert.ToInt32(item.Clark.TotalSalary) - Convert.ToInt32(item.Bill.TotalBills) - Convert.ToInt32(item.Additional.TotalAdditional));
    a += c;
    
    //    @Html.ActionLink("Create New Management List", "Create", new { id = item.Id }, new { @class = "btn btn-primary btn-large" })

}
    
</table>
<P>Latest Profit:@c</P>
<p>Total Profit Till Now: @a</p>
